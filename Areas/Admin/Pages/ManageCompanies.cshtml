@page
@model ReACT.Areas.Admin.Pages.ManageCompanies


<div class="container mx-auto">
    <div class="flex flex-col p-16">
        <h3 class="text-2xl font-semibold mb-10">Manage Companies</h3>
        <div class="overflow-x-auto mt-5">
            <table class="table table-zebra w-full">
            <!-- head -->
            <thead>
                <tr>
                    <th>Username/Email</th>
                    <th>Company Name</th>
                    <th>Address</th>
                    <th>Contact No</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>@user.FirstName</td>
                            <td>@user.Address</td>
                            <td>@user.contactNo</td>
                            <td><a asp-page="/EditCompany" asp-route-id="@user.Id"><i class="ph-pencil" style="color:blue"></i></a></td>
                            <td><a asp-page="/DeleteCompany" asp-route-id="@user.Id"><i class="ph-trash" style="color:red"></i></a></td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
</div>
    <div class="flow-root mx-6">
        <a class="btn btn-primary mt-4 float-right" asp-page="/AddCompany">
            Add Company
        </a>
    </div>
</div>

