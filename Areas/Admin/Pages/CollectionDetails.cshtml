@page
@model ReACT.Areas.Admin.Pages.CollectionDetailsModel

<div class="flex flex-col p-16">
    <h3 class="text-2xl font-semibold mb-10">Collection Details</h3>
    <div>
        <div class="card w-96 bg-gray-200 shadow-xl">
            <div class="card-body">
                <h2 class="card-title">Collection ID: @Model.collection.Id</h2>
                <p>Collection Date: @Model.collection.CollectionDate.ToShortDateString()</p>
                <p>User: @Model.user.FirstName @Model.user.LastName</p>
                <p>Address: @Model.user.Address</p>
                @if (Model.collection.AssignedCompany != "N/A")
                {
                    <p>Assigned Company: @Model.collection.AssignedCompany</p>
                } else
                {
                    <p>Assigned Company: None</p>
                    
                }
                <p>Status: @Model.collection.Status</p>
                <div class="card-actions justify-end">
                    <a class="btn" href="/Admin/ViewCollections">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
