@page
@model ReACT.Areas.Home.Pages.LoginModel
@{
}

<div class="h-full md:h-screen lg:flex lg:flex-wrap g-0 lg:rounded-r-lg rounded-b-lg lg:rounded-bl-none">
    <div class="lg:w-6/12 flex items-center">
        <div class="text-white  md:p-12 md:mx-6">
            <img src="~/phone recycling.jpg"
                 class="w-full"
                 alt="sample image" />
        </div>
    </div>
    <div class=" text-white lg:w-6/12 px-4 md:px-0" style="background: #f4a363 ;">
        <div class="md:p-12 md:mx-6">
            <div class="text-center">
                <h4 class="text-2xl font-semibold mt-1 mb-12 pb-1">Welcome To React</h4>
            </div>
            <div class="mt-2" style="margin-top: 0px;">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <p class="text-xl mb-4 font-semibold">Login</p>
                    <div class=" text-black mb-4">
                        <input type="email" asp-for="LModel.Email" placeholder=" Email" class="input w-full px-3 py-1.5" />
                        <span asp-validaton-for="LModel.Email" class="text-danger"></span>
                    </div>
                    <div class=" text-black mb-4">
                        <div class="inputContainer">
                            <input type="password" asp-for="LModel.Password" placeholder="Password" class="input foricon w-full px-3 py-1.5 " id="id_password_user" />
                            <i class="ph-eye" id="togglePassword1" style="margin-left: -30px; cursor: pointer;"></i>
                        </div>
                        <span asp-validaton-for="LModel.Password" class="text-danger"></span>
                    </div>
                    <div class="text-center pt-1 mb-4 pb-1">
                        <button type="submit" class="btn btn-wide btn-accent px-6 p-2.5 text-white font-medium text-xl  w-full" style="background: #0a7b79; border-color: #0a7b79">LOGIN</button>
                    </div>
                     <div class="mb-4">
                        <div class="form-control">
                            <label class="cursor-pointer label">
                            <span class="label-text text-white text-base">Remember me</span>
                                <input type="checkbox" asp-for="LModel.RememberMe" checked="checked" class="checkbox checkbox-accent">
                            </label>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    const togglePassword1 = document.querySelector('#togglePassword1');
    const password1 = document.querySelector('#id_password_user');

    togglePassword1.addEventListener('click', function (e) {
        // toggle the type attribute
        const type = password1.getAttribute('type') === 'password' ? 'text' : 'password';
        password1.setAttribute('type', type);
        // toggle the eye slash icon
        this.classList.toggle('ph-eye-slash');
    });
</script>  
