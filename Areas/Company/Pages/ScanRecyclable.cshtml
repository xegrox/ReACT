@page
@model ReACT.Areas.Company.Pages.AllocatePoints

<div class="navbar bg-orange-400">
    <div class="navbar-start">
        <div class="dropdown">
            <ul class="menu menu-horizontal px-1">
                <li>
                    <div class="form-control">
                        <input type="text" placeholder="Search User Name" class="input input-bordered" />
                    </div>
                </li>
                <li tabindex="0">
                    <a>
                        Newest allocation added
                        <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"><path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z" /></svg>
                    </a>
                    <ul class="p-2">
                        <li><a>Oldest allocation added</a></li>
                        <li><a>Name</a></li>
                        <li><a>Recycling type</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <div class="navbar-end">
        <label for="add-allocation-modal" class="btn">Add Allocation</label>
        <input type="checkbox" id="add-allocation-modal" class="modal-toggle" />
        <div class="modal">
            <div class="modal-box">
                <label for="add-allocation-modal" class="btn btn-sm btn-circle absolute right-2 top-2"><i class="ph-x"></i></label>
                <h3 class="font-bold text-lg">Add Points Allocation</h3>
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Barcode number</span>
                        <input type="text" placeholder="Enter barcode number" class="input input-bordered" />
                    </label>
                    <label class="label">
                        <span class="label-text">Total weight</span>
                        <input type="text" placeholder="Enter total weight of recyclables" class="input input-bordered" />
                    </label>
                    <div class="input-group">
                        <span class="label-text">Recycling type</span>
                        <select class="select select-bordered">
                            <option disabled selected>--select--</option>
                            <option>Self-recycled</option>
                            <option>Collection</option>
                        </select>
                    </div>
                </div>
                <div class="modal-action">
                    <label for="add-allocation-modal" class="btn text-white">Cancel</label>
                    <label for="add-allocation-modal" class="btn bg-green-600 hover:bg-orange-400 text-white">Add</label>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="overflow-y-auto">
    <table class="table w-fit" style="margin: 1.25rem; width: 75%; justify-content: center;">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Recycling Type</th>
                <th>Total Weight (kg)</th>
                <th>Points</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Cy Ganderton</td>
                <td>Self Recycled</td>
                <td>10</td>
                <td>1000</td>
            </tr>
        </tbody>
    </table>
</div>