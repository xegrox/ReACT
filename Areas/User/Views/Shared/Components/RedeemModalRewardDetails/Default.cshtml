@model ReACT.Areas.User.Views.Shared.Components.RedeemModalRewardDetails.RedeemModalRewardDetailsModel

<!DOCTYPE html>
<div class="flex space-x-8 items-center mb-7 h-12">
    <a class="btn btn-ghost btn-circle btn-sm text-xl text-base-content/80" hx-get="@Url.ActionLink("RewardListFrame", "Redeem", new {categoryId = Model.Reward.CategoryId})" hx-target="#redeem-modal-content">
        <i class="ph-arrow-left-bold"></i>
    </a>
    <h3 class="text-2xl font-semibold pl-1">@Model.CategoryName</h3>
</div>

<div class="flex space-x-16 max-w-3xl items-start">
    <img class="flex-1 card shadow-xl" src="@Model.Reward.ImageUrl">
    <div class="flex-1 space-y-8" x-data="{points: '@Model.Reward.Variants.First().Points'}">
        <h3 class="text-2xl font-semibold">@Model.Reward.Name</h3>
        <div>
            <label class="label"><span class="label-text">Amount</span></label>
            <div class="flex space-x-2 pb-2" x-data="{selected: '@Model.Reward.Variants.First().Id'}">
                @foreach (var item in Model.Reward.Variants)
                {
                    <label class="btn btn-primary rounded-full" :class="selected == '@item.Id' ? 'btn-active' : 'btn-outline'">
                        <input type="radio" name="variant" value="@item.Id" class="hidden" x-model="selected"
                               x-on:change="if ($el.checked) points = @item.Points"/>
                        @item.Name
                    </label>    
                }
            </div>
        </div>
        <div x-data="{checked: false}" class="space-y-1">
            <label class="label cursor-pointer">
                <span class="label-text">Gift to someone else</span> 
                <input type="checkbox" checked="checked" class="checkbox checkbox-primary" x-model="checked"/>
            </label>
            <div class="pb-2">
                <label class="label"><span class="label-text">Recipient Email</span></label>
                <input type="text" placeholder="john_doe@mymail.com" class="input input-bordered w-full" :disabled="!checked"/>
            </div>
        </div>
        <div>
            <div class="btn btn-primary w-full my-4">
                Claim for<i class="ph-moon-bold pl-1 pr-0.5"></i><p x-text="points"></p>
            </div>
        </div>
    </div>
</div>

