@page
@model ReACT.Areas.User.Pages.EditDetailsModel
@{
}

<div class="hero h-1/3 bg-white">
    <div class="hero-overlay bg-opacity-20"></div>
    <div class="hero-contenttext-black">
        <div class="max-w-prose">
            <h1 class="mb-5 text-6xl font-bold">Edit Account Details</h1>
        </div>
    </div>
</div>


<div class="container mx-auto w-8/12 my-8">
    <div class="flex justify-center rounded-lg" style="background: #F3F3F3">
        <div class="w-8/12 m-8 p-5">
            <form method="post" data-turbo=false>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class=" text-black mb-4">
                    <input type="text" asp-for="EModel.FirstName" placeholder="First Name" value="@Model.user.FirstName" class="input w-full px-3 py-1.5" />
                    <span asp-validation-for="EModel.FirstName" class="text-danger"></span>
                </div>
                <div class=" text-black mb-4">
                    <input type="text" asp-for="EModel.LastName" placeholder="Last Name" value="@Model.user.LastName" class="input w-full px-3 py-1.5" />
                    <span asp-validation-for="EModel.LastName" class="text-danger"></span>
                </div>
                <div class=" text-black mb-4">
                    <input type="text" asp-for="EModel.Address" placeholder="Address" value="@Model.user.Address" class="input w-full px-3 py-1.5" />
                    <span asp-validation-for="EModel.Address" class="text-danger"></span>
                </div>
                <label class="cursor-pointer label">
                    <span class="label-text text-black text-base">Make Account Private</span>
                    <input type="checkbox" asp-for="EModel.PublicPrivate" class="checkbox checkbox-accent">
                </label>
                <div class="flow-root mx-6">
                    <button type="submit" class="btn btn-primary mt-4 float-left" asp-page-handler="No_Edit_User">
                        Back
                    </button>
                    <button type="submit" class="btn btn-primary mt-4 float-right" asp-page-handler="Edit_User">
                       Confirm
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>