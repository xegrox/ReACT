@page
@model ReACT.Areas.User.Pages.LogoutModel
@{
}

<div class="hero h-1/3 bg-stone-100">
    <div class="hero-overlay bg-opacity-20"></div>
    <div class="hero-contenttext-black">
        <div class="max-w-prose">
            <h1 class="mb-5 text-6xl font-bold">Logout</h1>
        </div>
    </div>
</div>

<form method="post">
    <div class="container mx-auto">
        <div class="flex justify-center">
            <div class="mt-8">
                <p class="mb-5 text-lg">Are you sure you want to logout?</p>
                <div class="flow-root">
                    <button class="btn float-left" asp-page-handler="Logout">Yes</button>
                    <button class="btn btn-outline float-right" asp-page-handler="DontLogout">No</button>
                </div>
            </div>
        </div>
    </div>
</form>