@page
@model ReACT.Areas.User.Pages.Recycle

<div class="hero h-1/3 bg-emerald-100">
    <div class="hero-overlay bg-opacity-20"></div>
    <div class="hero-contenttext-black">
        <div class="max-w-prose">
            <h1 class="mb-5 text-6xl font-bold">Schedule a Collection</h1>
        </div>
    </div>
</div>

<div class="flex flex-col pt-16 pr-16 pl-16">
    <div class="collapse collapse-arrow border border-base-300 bg-base-100 rounded-box">
        <input type="checkbox" />
        <div class="collapse-title text-2xl font-medium">
            What is a collection?
        </div>
        <div class="collapse-content text-lg">
            <p>A collection is a value added service that aims to help collect recycables from the doorstep of households. <br />
                Interested in scheduling a collection? Fill up the form below!
            </p>
        </div>
    </div>
</div>

<div class="flex flex-col p-16">
    <form class="flex-1 flex flex-col space-y-2" method="post">
        <div class="form-control w-full max-w-xs">
            <label class="label">
                <span class="label-text">Collection Date</span>
            </label>
            <input asp-for="Date" type="date" placeholder="Choose a collection date" class="input input-bordered w-full max-w-xs"/>
            <span asp-validation-for="Date" class="text-error"></span>
        </div>
        <div class="form-control w-full max-w-xs">
            <label class="label">
                <span class="label-text">Address</span>
            </label>
            <input asp-for="Address" type="text" placeholder="Enter your address" class="input input-bordered w-full max-w-xs"/>
            <span asp-validation-for="Address" class="text-error"></span>
        </div>
        <div class="form-control w-full max-w-xs">
            <button class="btn btn-active btn-accent mt-3 text-white" type="submit">Submit</button>
        </div>
    </form>
</div>